<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <!-- Rectangle background -->
            <solid android:color="#FFFFFF"/>  <!-- Change to the desired background color -->

            <!-- Black outer line -->
            <stroke
                android:width="2dp"
                android:color="#000000"/>

            <!-- Corner radius, if you want to have rounded corners -->
            <corners android:radius="4dp"/>
        </shape>
    </item>
</selector>